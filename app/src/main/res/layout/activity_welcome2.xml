<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/welome_driver"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/redwall2"
    tools:context=".WelcomeActivity2">

    <Button
        android:id="@+id/welcome_customer_btn"
        android:layout_width="243dp"
        android:layout_height="130dp"

        android:layout_centerInParent="true"
        android:background="@color/purple_200"
        android:backgroundTint="@color/design_default_color_secondary"
        android:drawableBottom="@drawable/baseline_login_24"
        android:text="Customer login"
        android:textColor="#DE0C0C0C"
        android:textSize="20dp"
        android:textStyle="bold"
        app:backgroundTint="#98FBF2" />

    <Button
        android:id="@+id/welcome_driver_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcome_customer_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:text="Driver login"
        android:visibility="visible"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcome_driver_btn"
        android:layout_marginTop="60dp"
        android:background="@drawable/line1" />


</RelativeLayout>